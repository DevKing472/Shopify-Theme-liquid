{
  "name": "shopify-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel --race dev shopify:watch",
    "dev": "cross-env NODE_ENV=development node_modules/.bin/webpack --config .config/webpack.dev.js --watch",
    "build": "cross-env NODE_ENV=production node_modules/.bin/webpack --config .config/webpack.prod.js",
    "shopify:watch": "theme watch --env=development --allow-live --config .config/shopify.config.yml --dir shopify",
    "shopify:deploy": "theme deploy --env=production --config .config/shopify.config.yml --dir shopify",
    "open:dev": "theme open --env=development",
    "open:live": "theme open --env=production"
  },
  "dependencies": {
    "tailwindcss": "^1.8.6",
    "vue": "^2.6.12",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "mini-css-extract-plugin": "^0.11.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^7.0.32",
    "postcss-loader": "^4.0.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "vue-loader": "^15.9.3",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  }
}
